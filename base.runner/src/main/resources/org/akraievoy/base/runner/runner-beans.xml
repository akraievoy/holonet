<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-2.5.xsd"
       default-init-method="start"
       default-destroy-method="stop">
  <import resource="runner-main.xml"/>

  <bean class="org.akraievoy.base.runner.persist.ImportRunnable" id="experimentImporter">
    <constructor-arg ref="runnerDao"/>
  </bean>

  <bean class="org.akraievoy.base.runner.swing.ExperimentTableModel" id="experimentsTableModel">
    <constructor-arg ref="runnerDao"/>
  </bean>

  <bean class="org.akraievoy.base.runner.swing.RunTableModel" id="runTableModel">
    <constructor-arg ref="runnerDao"/>
  </bean>

  <bean class="org.akraievoy.base.runner.swing.ExperimentChooserPanel" id="experimentChooserPanel"/>
  <bean class="org.akraievoy.base.runner.swing.ExperimentChooserFrame" id="experimentChooserFrame">
    <constructor-arg ref="experimentChooserPanel"/>
  </bean>

  <bean class="org.akraievoy.base.runner.swing.ExperimentChooserUiController" id="uiController">
    <constructor-arg ref="experimentChooserFrame"/>
    <constructor-arg ref="containerStopper"/>
    <constructor-arg ref="experimentsTableModel"/>
    <constructor-arg ref="runTableModel"/>
    <constructor-arg ref="executor"/>
    <constructor-arg ref="experimentRunner"/>
    <constructor-arg ref="runnerDao"/>
    <constructor-arg ref="experimentImporter"/>
  </bean>
</beans>