<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-2.5.xsd"
       default-init-method="start"
       default-destroy-method="stop">

  <bean class="org.akraievoy.db.DbConfig" id="dbConfig">
    <property name="driverClass" value="org.h2.Driver"/>
    <property name="url" value="jdbc:h2:data/h2/database"/>
    <property name="login" value="sa"/>
    <property name="password" value=""/>
    <property name="validator" value="SELECT * FROM INFORMATION_SCHEMA.INDEXES"/>
    <property name="sync" value="true"/>
    <property name="connectionMaxNum" value="1"/>
    <property name="connectionTimeout" value="60"/>
  </bean>
  
  <bean id="couch" class="org.akraievoy.couch.CouchDao">
    <property name="couchUrl" value="http://localhost:5984/"/>
    <property name="dbName" value="hn"/>
    <property name="username" value="supercow"/>
    <property name="password" value="typical"/>
  </bean>

  <bean class="org.akraievoy.db.CouchDb" id="couchDb">
    <constructor-arg ref="couch" />
  </bean>

  <bean class="org.akraievoy.db.QueryRegistry" id="queryRegistry">
    <constructor-arg value="/org/akraievoy/base/runner/persist/queries.properties"/>
  </bean>

  <bean class="org.akraievoy.db.Db" id="db">
    <constructor-arg ref="dbConfig"/>
  </bean>

  <bean class="org.akraievoy.db.tx.TransactionContextBase" id="transactionCtx">
    <constructor-arg ref="db"/>
  </bean>

  <bean class="org.akraievoy.base.runner.persist.RunnerDaoCaching" id="runnerDaoRaw">
    <constructor-arg ref="queryRegistry"/>

    <property name="schemaVersion" value="1"/>
  </bean>

  <bean id="runnerDao" factory-bean="runnerDaoRaw" factory-method="compose">
    <constructor-arg ref="transactionCtx"/>
  </bean>

  <bean class="org.akraievoy.base.Executors" id="executor" factory-method="scheduledExecutor">
    <constructor-arg type="java.lang.String" value="Experiment Runner"/>
    <constructor-arg type="int" value="2"/>
    <constructor-arg type="boolean" value="true"/>
  </bean>

  <bean class="org.akraievoy.base.runner.domain.ExperimentRunnerImpl" id="experimentRunner">
    <constructor-arg ref="runnerDao"/>
    <constructor-arg ref="runnerDao"/>
  </bean>

  <bean class="org.akraievoy.base.runner.ContainerStopperImpl" id="containerStopper"/>

  <bean class="org.akraievoy.base.runner.domain.BatchRunner$Impl" id="batchRunner">
    <property name="couch" ref="couchDb"/>
    <property name="runnerDao" ref="runnerDao"/>
    <property name="experimentRunner" ref="experimentRunner"/>
  </bean>
</beans>