<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:hn="https://github.com/akraievoy/holonet/runner"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
           https://github.com/akraievoy/holonet/runner
           https://github.com/akraievoy/holonet/raw/master/ext/holonet.runner.xsd"
       default-init-method="start"
       default-destroy-method="stop">
  <hn:Experiment
      id="overlayGO-2-ovlDataset" depends=""
      description="Overlay GO [stage2] Overlay Dataset">
    <hn:Config name="default" description="Default (select 25% of nodes)">
      <hn:Param name="esOvl.seed" value="31013"/>
      <hn:Param
          name="onf.omega" value="-1"
          description="degree-based preference (as power of degree) to elect physical node as host to a virtual"/>
      <hn:Param
          name="onf.nu" value="0.25"
          description="fraction of physical nodes elected to host virtual nodes"/>
      <hn:Param
          name="ovlReq.phi" value="0.25"
          description="degree-based preference (as power of population density) to emit requests from this node"/>
      <hn:Param
          name="ovlReq.psi" value="0.75"
          description="degree-based preference (as power of population density) to emit requests to this node"/>
      <hn:Param
          name="ovlReq.sigma" value="0.03"
          description="request amount deviation"/>
      <hn:Param name="ovlReqThresh.minAbsValue" value="0.003"/>
      <hn:Param name="ovlReqThresh.minToMaxRatio" value="0.001"/>
    </hn:Config>
    <hn:Config name="nu50" description="Default (select 50% of nodes)">
      <hn:Param name="onf.nu" value="0.5"/>
    </hn:Config>
  </hn:Experiment>

  <bean class="org.akraievoy.cnet.net.ref.RefEdgeData" id="ref_default_edata_structure">
    <property name="path" value="default.structure"/>
  </bean>
  <bean class="org.akraievoy.cnet.net.ref.RefVertexData" id="ref_default_vdata_location_x">
    <property name="path" value="default.location.x"/>
  </bean>
  <bean class="org.akraievoy.cnet.net.ref.RefVertexData" id="ref_default_vdata_location_y">
    <property name="path" value="default.location.y"/>
  </bean>
  <bean class="org.akraievoy.cnet.net.ref.RefEdgeData" id="ref_default_edata_routeLen">
    <property name="path" value="default.routeLen"/>
  </bean>
  <bean class="org.akraievoy.cnet.net.ref.RefVertexData" id="ref_default_vdata_density">
    <property name="path" value="default.density"/>
  </bean>

  <bean class="org.akraievoy.cnet.net.ref.RefEdgeData" id="ref_overlay_edata_distance">
    <property name="path" value="overlay.distance"/>
  </bean>
  <bean class="org.akraievoy.cnet.net.ref.RefEdgeData" id="ref_overlay_edata_requests">
    <property name="path" value="overlay.requests"/>
  </bean>
  <bean class="org.akraievoy.cnet.net.ref.RefVertexData" id="ref_overlay_vdata_density">
    <property name="path" value="overlay.density"/>
  </bean>
  <bean class="org.akraievoy.cnet.net.ref.RefVertexData" id="ref_overlay_vdata_index">
    <property name="path" value="overlay.index"/>
  </bean>
  <bean class="org.akraievoy.cnet.net.ref.RefVertexData" id="ref_overlay_vdata_location_x">
    <property name="path" value="overlay.location.x"/>
  </bean>
  <bean class="org.akraievoy.cnet.net.ref.RefVertexData" id="ref_overlay_vdata_location_y">
    <property name="path" value="overlay.location.y"/>
  </bean>

  <bean class="org.akraievoy.cnet.gen.vo.EntropySourceRandom" id="esOvl">
    <!-- DYNAMIC -->
    <property name="seed" value="11311"/>
  </bean>
  <bean class="org.akraievoy.cnet.gen.vo.EntropySourceRandom" id="esOvlReq">
    <!-- DYNAMIC -->
    <property name="seed" value="11311"/>
  </bean>

  <bean class="org.akraievoy.cnet.gen.domain.OverlayNetFactory" id="onf">
    <constructor-arg ref="esOvl"/>

    <!-- DYNAMIC -->
    <property name="omega" value="0.25"/>
    <!-- DYNAMIC -->
    <property name="nu" value="0.25"/>

    <property name="source" ref="ref_default_edata_structure"/>
    <property name="target" ref="ref_overlay_vdata_index"/>
    <property name="edgeDataMap">
      <map>
        <entry key-ref="ref_default_edata_routeLen" value-ref="ref_overlay_edata_distance"/>
      </map>
    </property>
    <property name="vertexDataMap">
      <map>
        <entry key-ref="ref_default_vdata_density" value-ref="ref_overlay_vdata_density"/>
        <entry key-ref="ref_default_vdata_location_x" value-ref="ref_overlay_vdata_location_x"/>
        <entry key-ref="ref_default_vdata_location_y" value-ref="ref_overlay_vdata_location_y"/>
      </map>
    </property>
  </bean>

  <bean class="org.akraievoy.cnet.metrics.domain.MetricEDataThreshold" id="ovlReqThresh">
    <constructor-arg ref="ovlReq"/>

    <property name="target" ref="ref_overlay_edata_requests"/>

    <!-- DYNAMIC -->
    <property name="minAbsValue" value="0.05"/>
    <!-- DYNAMIC -->
    <property name="minToMaxRatio" value="0.05"/>
  </bean>

  <bean id="ovlReq" class="org.akraievoy.cnet.metrics.domain.MetricEDataOverlayRequest">
    <constructor-arg ref="esOvlReq"/>

    <property name="source" ref="ref_overlay_vdata_density"/>

    <!-- DYNAMIC -->
    <property name="phi" value="0.25"/>
    <!-- DYNAMIC -->
    <property name="psi" value="0.75"/>
    <!-- DYNAMIC -->
    <property name="sigma" value="1"/>
  </bean>

  <bean class="org.akraievoy.base.runner.domain.RunnableComposite" id="main">
    <property name="group">
      <list>
        <ref bean="onf"/>
        <ref bean="ovlReqThresh"/>
      </list>
    </property>
  </bean>
</beans>