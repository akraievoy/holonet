<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:hn="https://github.com/akraievoy/holonet/runner"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
           https://github.com/akraievoy/holonet/runner
           https://github.com/akraievoy/holonet/raw/master/ext/holonet.runner.xsd"
       default-init-method="start"
       default-destroy-method="stop">
  <hn:Experiment id="eigenGap-1-structure" depends="" description="EigenGap [stage1] Structure">
    <hn:Config name="default" description="1013 Nodes">
      <hn:Param name="netFactory.netNodeNum" value="1013"/>
    </hn:Config>
  </hn:Experiment>

  <bean class="org.akraievoy.cnet.net.ref.RefEdgeData" id="ref_default_vdata_structure">
    <property name="path" value="default.structure"/>
  </bean>

  <bean class="org.akraievoy.base.runner.api.RefDouble" id="ref_eigenGap_pre">
    <property name="path" value="eigenGap.pre"/>
  </bean>

  <bean class="org.akraievoy.cnet.gen.domain.MetricEDataGenStructural" id="netFactory">
    <property name="type" value="paley"/>
    <property name="target" ref="ref_default_vdata_structure"/>

    <!-- DYNAMIC -->
    <property name="netNodeNum" value="1013"/>
  </bean>

  <bean class="org.akraievoy.cnet.metrics.domain.MetricScalarEigenGap" id="eigenGapMetricPre">
    <property name="source" ref="ref_default_vdata_structure"/>
    <property name="target" ref="ref_eigenGap_pre"/>
  </bean>

  <bean class="org.akraievoy.base.runner.domain.RunnableComposite" id="main">
    <property name="group">
      <list>
        <ref bean="netFactory"/>
        <ref bean="eigenGapMetricPre"/>
      </list>
    </property>
  </bean>
</beans>