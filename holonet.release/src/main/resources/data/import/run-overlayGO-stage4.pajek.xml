<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:hn="https://github.com/akraievoy/holonet/runner/1.3.2"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
           https://github.com/akraievoy/holonet/runner/1.3.2
           https://github.com/akraievoy/holonet/raw/master/ext/holonet.runner-1.3.2.xsd"
       default-init-method="start"
       default-destroy-method="stop">
  <hn:Experiment
      id="overlayGO-4-solutionPajek" depends=""
      description="Overlay GO [stage4] Pajek export">
    <hn:Config name="default" description="Default">
    </hn:Config>
  </hn:Experiment>

  <bean class="org.akraievoy.cnet.net.ref.RefEdgeData" id="ref_overlay_edata_distance">
    <property name="path" value="overlay.distance"/>
  </bean>
  <bean class="org.akraievoy.cnet.net.ref.RefEdgeData" id="ref_overlay_edata_requests">
    <property name="path" value="overlay.requests"/>
  </bean>
  <bean class="org.akraievoy.cnet.net.ref.RefEdgeData" id="ref_overlay_structure">
    <property name="path" value="specimen.best.genome0"/>
  </bean>

  <bean class="org.akraievoy.cnet.net.ref.RefVertexData" id="ref_overlay_vdata_density">
    <property name="path" value="overlay.density"/>
  </bean>
  <bean class="org.akraievoy.cnet.net.ref.RefVertexData" id="ref_overlay_vdata_index">
    <property name="path" value="overlay.index"/>
  </bean>
  <bean class="org.akraievoy.cnet.net.ref.RefVertexData" id="ref_overlay_vdata_location_x">
    <property name="path" value="overlay.location.x"/>
  </bean>
  <bean class="org.akraievoy.cnet.net.ref.RefVertexData" id="ref_overlay_vdata_location_y">
    <property name="path" value="overlay.location.y"/>
  </bean>

  <bean class="org.akraievoy.cnet.metrics.domain.MetricVDataRenorm" id="overlay_vdata_requestsum">
    <property name="source">
      <bean class="org.akraievoy.cnet.metrics.domain.MetricVDataLogScale">
        <property name="source">
          <bean class="org.akraievoy.cnet.metrics.domain.MetricVDataPowers">
            <property name="source" ref="ref_overlay_edata_requests"/>
          </bean>
        </property>
      </bean>
    </property>
    <property name="min" value="2"/>
    <property name="max" value="20"/>
  </bean>

  <bean class="org.akraievoy.cnet.export.domain.export.ExportPajek" id="main">
    <property name="targetDir" value="data/reports/pajek_ovl_genetics"/>

    <property name="hiddenParameters"
              value="metricOverlayRequest.psi,metricOverlayRequest.phi,entropySourceOvl.seed,requestMetric.minToMaxRatio,metricOverlayRequest.sigma,requestMetric.minAbsValue,overlayNetFactory.nu,overlayNetFactory.omega,structure.baseDegree,entropySourceLocGen.seed,entropySource.seed,entropySourceLocation.seed,locationMetric.nodes,ovlGenOpt.specimenIndex"/>

    <property name="VColorer">
      <bean class="org.akraievoy.cnet.export.domain.export.PajekColorer">
        <constructor-arg value="bw"/>
        <property name="min" value="2"/>
        <property name="max" value="20"/>
      </bean>
    </property>
    <property name="VColorSource" ref="overlay_vdata_requestsum"/>
    <property name="VLabelSource" ref="ref_overlay_vdata_index"/>
    <property name="VCoordXSource" ref="ref_overlay_vdata_location_x"/>
    <property name="VCoordYSource" ref="ref_overlay_vdata_location_y"/>
    <property name="VRadiusSource" ref="overlay_vdata_requestsum"/>

    <property name="ESource" ref="ref_overlay_structure"/>
    <property name="ELabelSource" ref="ref_overlay_edata_distance"/>
    <property name="EColorSource">
      <bean class="org.akraievoy.cnet.metrics.domain.MetricEDataRenorm">
        <property name="source" ref="ref_overlay_edata_distance"/>
      </bean>
    </property>
    <property name="EColorer">
      <bean class="org.akraievoy.cnet.export.domain.export.PajekColorer">
        <constructor-arg value="blue"/>
      </bean>
    </property>
  </bean>
</beans>