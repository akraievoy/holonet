<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:hn="https://github.com/akraievoy/holonet/runner"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
           https://github.com/akraievoy/holonet/runner
           https://github.com/akraievoy/holonet/raw/master/ext/holonet.runner.xsd"
       default-init-method="start"
       default-destroy-method="stop">
  <hn:Experiment
      id="physModelRouting-1" depends=""
      description="Routing profiler">
    <hn:Config name="default" description="default">
    </hn:Config>
  </hn:Experiment>

  <bean class="org.akraievoy.cnet.net.ref.RefEdgeData" id="ref_default_edata_structure">
    <property name="path" value="default.structure"/>
  </bean>
  <bean class="org.akraievoy.cnet.net.ref.RefEdgeData" id="ref_default_edata_distance">
    <property name="path" value="default.distance"/>
  </bean>
  <bean class="org.akraievoy.cnet.net.ref.RefVertexData" id="ref_default_vdata_location_x">
    <property name="path" value="default.location.x"/>
  </bean>
  <bean class="org.akraievoy.cnet.net.ref.RefVertexData" id="ref_default_vdata_location_y">
    <property name="path" value="default.location.y"/>
  </bean>
  <bean class="org.akraievoy.cnet.net.ref.RefVertexData" id="ref_default_vdata_density">
    <property name="path" value="default.density"/>
  </bean>

  <bean class="org.akraievoy.cnet.metrics.domain.MetricVDataRenorm" id="ref_default_vdata_density_renorm">
    <property name="source">
      <bean class="org.akraievoy.cnet.metrics.domain.MetricVDataLogScale">
        <property name="source" ref="ref_default_vdata_density"/>
      </bean>
    </property>
    <property name="min" value="2"/>
    <property name="max" value="20"/>
  </bean>

  <bean class="org.akraievoy.cnet.export.domain.export.ExportPajek" id="main">
    <property name="targetDir" value="data/reports/pajek_physical"/>

    <property name="VColorer">
      <bean class="org.akraievoy.cnet.export.domain.export.PajekColorer">
        <constructor-arg value="bw"/>
        <property name="min" value="2"/>
        <property name="max" value="20"/>
      </bean>
    </property>
    <property name="VColorSource" ref="ref_default_vdata_density_renorm"/>
    <property name="VCoordXSource" ref="ref_default_vdata_location_x"/>
    <property name="VCoordYSource" ref="ref_default_vdata_location_y"/>
    <property name="VRadiusSource" ref="ref_default_vdata_density_renorm"/>

    <property name="ESource" ref="ref_default_edata_structure"/>
    <property name="ELabelSource" ref="ref_default_edata_distance"/>
    <property name="EColorSource">
      <bean class="org.akraievoy.cnet.metrics.domain.MetricEDataRenorm">
        <property name="source" ref="ref_default_edata_distance"/>
      </bean>
    </property>
    <property name="EColorer">
      <bean class="org.akraievoy.cnet.export.domain.export.PajekColorer">
        <constructor-arg value="blue"/>
      </bean>
    </property>
  </bean>
</beans>