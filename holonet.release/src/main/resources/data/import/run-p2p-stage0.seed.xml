<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:hn="https://github.com/akraievoy/holonet/runner/1.3.2"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
           https://github.com/akraievoy/holonet/runner/1.3.2
           https://github.com/akraievoy/holonet/raw/master/ext/holonet.runner-1.3.2.xsd"
       default-init-method="start"
       default-destroy-method="stop">
  <hn:Experiment
      id="p2p-stage0-seed" depends=""
      description="P2P [stage0] Choose your seeds">
    <hn:Config name="default" description="single seeds">
      <hn:Param name="tbInitSeed.value" value="1234567"/>
      <hn:Param name="tbRunSeed.value" value="7654321"/>
    </hn:Config>
    <hn:Config name="perGeneration" description="Per-generation runs">
      <hn:Param name="ovlGenOpt.generation" value="*strategy*" chainedStrategy="iterate"/>
    </hn:Config>
    <hn:Config name="perGeneration-3x7" description="Per-generation runs, 7 inits * 3 runs">
      <hn:Param name="ovlGenOpt.generation" value="*strategy*" chainedStrategy="iterate"/>
      <hn:Param name="tbInitSeed.value" value="7654321;91032843;8574829;1029389;9193782;74754832;68492834"/>
      <hn:Param name="tbRunSeed.value" value="1234567;1928483;9348492"/>
    </hn:Config>
    <hn:Config name="perGeneration-1x7" description="Per-generation runs, 7 inits * 1 run">
      <hn:Param name="ovlGenOpt.generation" value="*strategy*" chainedStrategy="iterate"/>
      <hn:Param name="tbInitSeed.value" value="7654321;91032843;8574829;1029389;9193782;74754832;68492834"/>
      <hn:Param name="tbRunSeed.value" value="1234567"/>
    </hn:Config>
    <hn:Config name="perGeneration-3x1" description="Per-generation runs, 1 init * 3 runs">
      <hn:Param name="ovlGenOpt.generation" value="*strategy*" chainedStrategy="iterate"/>
      <hn:Param name="tbInitSeed.value" value="7654321"/>
      <hn:Param name="tbRunSeed.value" value="1234567;1928483;9348492"/>
    </hn:Config>
  </hn:Experiment>

  <bean id="tbInitSeed" class="org.akraievoy.base.runner.api.RefLong">
    <property name="path" value="tbInitSeed"/>
    <property name="value" value="13579"/>
  </bean>

  <bean id="tbRunSeed" class="org.akraievoy.base.runner.api.RefLong">
    <property name="path" value="tbRunSeed"/>
    <property name="value" value="24680"/>
  </bean>

  <bean class="org.akraievoy.base.runner.domain.RunnableComposite" id="main">
    <property name="group">
      <list/>
    </property>
  </bean>
</beans>
