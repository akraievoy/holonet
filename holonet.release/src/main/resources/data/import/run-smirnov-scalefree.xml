<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:hn="https://github.com/akraievoy/holonet/runner/1.3.3"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
           https://github.com/akraievoy/holonet/runner/1.3.3
           https://github.com/akraievoy/holonet/raw/master/ext/holonet.runner-1.3.3.xsd"
       default-init-method="start"
       default-destroy-method="stop">
  <hn:Experiment
      id="smirnov-scalefree" depends=""
      description="Scale-free network model per request of Oleg Smirnov">
    <hn:Config name="default" description="Default (40960 nodes, 1 seed, 128 links)">
      <hn:Param name="entropySource.seed" value="967436"/>
      <hn:Param name="distFactory.netNodeNum" value="40960"/>
      <hn:Param name="connPreference.alpha" value="1.5"/>
      <hn:Param name="connPreference.beta" value="2.75"/>
      <hn:Param name="structure.baseDegree" value="128"/>
    </hn:Config>
  </hn:Experiment>

  <bean class="org.akraievoy.cnet.net.ref.RefEdgeData" id="ref_default_edata_structure">
    <property name="path" value="default.structure"/>
  </bean>
  <bean class="org.akraievoy.cnet.net.ref.RefEdgeData" id="ref_default_edata_distance">
    <property name="path" value="default.distance"/>
  </bean>

  <bean id="netFactory" class="org.akraievoy.cnet.gen.domain.MetricEDataGenStructural">
    <property name="target" ref="ref_default_edata_structure"/>
    <property name="type" value="path"/>
    <property name="netNodeNum" value="3"/>
  </bean>
  <bean id="distFactory" class="org.akraievoy.cnet.gen.domain.MetricEDataGenStructural">
    <property name="target" ref="ref_default_edata_distance"/>
    <property name="type" value="constant"/>
    <property name="netNodeNum" value="512"/> <!-- SET BY CONFIG -->
  </bean>
  <bean id="entropySource" class="org.akraievoy.cnet.gen.vo.EntropySourceRandom">
    <property name="seed" value="185934"/> <!-- SET BY CONFIG -->
  </bean>
  <bean id="connPreference" class="org.akraievoy.cnet.gen.vo.ConnPreferenceYookJeongBarabasi">
    <property name="alpha" value="1"/> <!-- SET BY CONFIG -->
    <property name="beta" value="1"/> <!-- SET BY CONFIG -->
  </bean>
  <bean id="structure" class="org.akraievoy.cnet.metrics.domain.MetricEDataStructure">
    <constructor-arg ref="connPreference"/>
    <constructor-arg ref="entropySource"/>
    <property name="baseDegree" value="3"/> <!-- SET BY CONFIG -->
    <property name="distSource" ref="ref_default_edata_distance"/>
    <property name="structureSource" ref="ref_default_edata_structure"/>
    <property name="target" ref="ref_default_edata_structure"/>
  </bean>
  <bean id="export" class="org.akraievoy.cnet.export.domain.export.ExportPajek">
    <property name="targetDir" value="data/reports/smirnov-scalefree"/>
    <property name="ESource" ref="ref_default_edata_structure"/>
  </bean>

  <bean class="org.akraievoy.base.runner.domain.RunnableComposite" id="main">
    <property name="group">
      <list>
        <ref bean="netFactory"/>
        <ref bean="distFactory"/>
        <ref bean="structure"/>
        <ref bean="export"/>
      </list>
    </property>
  </bean>
</beans>
