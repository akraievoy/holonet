<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:hn="https://github.com/akraievoy/holonet/runner"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
           https://github.com/akraievoy/holonet/runner
           https://github.com/akraievoy/holonet/raw/master/ext/holonet.runner-1.3.1.xsd"
       default-init-method="start"
       default-destroy-method="stop">
  <hn:Experiment id="eigenGap-2-delete" depends="" description="EigenGap [stage2] Deletion">
    <hn:Config name="default" description="Minimal (50 nodes, 1 seed)">
      <hn:Param name="entropySource.seed" value="3113"/>
      <hn:Param name="deletion.deletedNodeNum" value="50"/>
    </hn:Config>
    <hn:Config name="full" description="Full (up to 500 nodes, 13 seeds)">
      <hn:Param name="entropySource.seed"
                value="3113;1331;13331;13131;13031;10301;10101;30103;31013;33133;11311;11011;11311"/>
      <hn:Param name="deletion.deletedNodeNum" value="50;100;150;200;250;300;350;400;450;500"/>
    </hn:Config>
  </hn:Experiment>

  <bean class="org.akraievoy.cnet.net.ref.RefEdgeData" id="ref_default_vdata_structure">
    <property name="path" value="default.structure"/>
  </bean>
  <bean class="org.akraievoy.cnet.net.ref.RefEdgeData" id="ref_default_vdata_structure_post">
    <property name="path" value="default.structure_post"/>
  </bean>

  <bean class="org.akraievoy.base.runner.api.RefDouble" id="ref_eigenGap_post">
    <property name="path" value="eigenGap.post"/>
  </bean>

  <bean class="org.akraievoy.cnet.gen.vo.EntropySourceRandom" id="entropySource">
    <!-- DYNAMIC -->
    <property name="seed" value="1"/>
  </bean>

  <bean class="org.akraievoy.cnet.gen.domain.MetricEDataGenDeletion" id="deletion">
    <constructor-arg ref="entropySource"/>
    <property name="source" ref="ref_default_vdata_structure"/>
    <property name="target" ref="ref_default_vdata_structure_post"/>

    <!-- DYNAMIC -->
    <property name="deletedNodeNum" value="100"/>
  </bean>

  <bean class="org.akraievoy.cnet.metrics.domain.MetricScalarEigenGap" id="eigenGapMetricPost">
    <property name="source" ref="ref_default_vdata_structure_post"/>
    <property name="target" ref="ref_eigenGap_post"/>
  </bean>

  <bean class="org.akraievoy.base.runner.domain.RunnableComposite" id="main">
    <property name="group">
      <list>
        <ref bean="deletion"/>
        <ref bean="eigenGapMetricPost"/>
      </list>
    </property>
  </bean>
</beans>