<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:hn="https://github.com/akraievoy/holonet/runner/1.3.3"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
           https://github.com/akraievoy/holonet/runner/1.3.3
           https://github.com/akraievoy/holonet/raw/master/ext/holonet.runner-1.3.3.xsd"
       default-init-method="start"
       default-destroy-method="stop">
  <hn:Experiment
      id="p2p-stage1-protoSet" depends=""
      description="P2P [stage1] Choose protocols">
    <hn:Config name="default" description="FaultTolerantChordServiceBase">
      <hn:Param
          name="tbProtoClass.value" value="algores.holonet.protocols.chord.fault.FaultTolerantChordServiceBase"
          strategy="spawn" chainedStrategy="spawn"/>
    </hn:Config>
    <hn:Config name="full" description="4 protocols (from basic Ring to Latency-optimizing Chord)">
      <hn:Param name="tbProtoClass.value"
                value="algores.holonet.protocols.ring.RingService;algores.holonet.protocols.chord.ChordServiceBase;algores.holonet.protocols.chord.fault.FaultTolerantChordServiceBase;algores.holonet.protocols.chord.latency.LatencyChordServiceBase"
                strategy="spawn" chainedStrategy="spawn"/>
    </hn:Config>
  </hn:Experiment>

  <bean id="tbProtoClass" class="org.akraievoy.base.runner.api.RefString">
    <property name="path" value="tbProtoClass"/>
  </bean>

  <bean class="org.akraievoy.base.runner.domain.RunnableComposite" id="main">
    <property name="group">
      <list/>
    </property>
  </bean>
</beans>
