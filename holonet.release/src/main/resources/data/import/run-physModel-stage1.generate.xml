<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:hn="https://github.com/akraievoy/holonet/runner/1.3.2"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
           https://github.com/akraievoy/holonet/runner/1.3.2
           https://github.com/akraievoy/holonet/raw/master/ext/holonet.runner-1.3.2.xsd"
       default-init-method="start"
       default-destroy-method="stop">
  <hn:Experiment
      id="physModel-1-generate" depends=""
      description="Physical network model [stage1] Generate">
    <hn:Config name="default" description="default">
      <hn:Param name="entropySourceLocGen.seed" value="234453"/>
      <hn:Param name="entropySourceLocation.seed" value="634567"/>
      <hn:Param name="entropySource.seed" value="967436"/>

      <hn:Param name="structure.baseDegree" value="2"/>
      <hn:Param name="locationMetric.nodes" value="128"/>

      <hn:Param name="connPreference.alpha" value="1"/>
      <hn:Param name="connPreference.beta" value="1"/>
    </hn:Config>
    <hn:Config name="sizeProbe" description="size probes">
      <hn:Param name="locationMetric.nodes" value="128;256;512"/>
    </hn:Config>
    <hn:Config name="sizeProfile" description="size profiling">
      <hn:Param name="entropySource.seed" value="3113;1331;13331"/>
      <hn:Param name="locationMetric.nodes" value="64;96;128;192;256;384;512;768;1024"/>
    </hn:Config>
    <hn:Config name="dimensionProfile" description="dimension profiling">
      <hn:Param name="entropySource.seed" value="13;21;432"/>
      <hn:Param name="locationGenerator.dimensionRatio" value="1.15;1.35;1.5;1.7;2"/>
    </hn:Config>
    <hn:Config name="profileDegree" description="degree profiling">
      <hn:Param name="entropySource.seed" value="3113;1331;13331"/>
      <hn:Param name="structure.baseDegree" value="2;3;4;5;6;7;8;9"/>
    </hn:Config>
  </hn:Experiment>

  <bean class="org.akraievoy.cnet.gen.vo.EntropySourceRandom" id="entropySourceLocGen">
    <property name="seed" value="13031"/>
  </bean>

  <bean class="org.akraievoy.cnet.gen.domain.LocationGeneratorRecursive" id="locationGenerator">
    <constructor-arg ref="entropySourceLocGen"/>

    <property name="gridSize" value="1024"/>
  </bean>

  <bean class="org.akraievoy.cnet.net.ref.RefEdgeData" id="ref_default_edata_structure">
    <property name="path" value="default.structure"/>
  </bean>
  <bean class="org.akraievoy.cnet.net.ref.RefEdgeData" id="ref_default_edata_distance">
    <property name="path" value="default.distance"/>
  </bean>
  <bean class="org.akraievoy.cnet.net.ref.RefEdgeData" id="ref_default_edata_routeLen">
    <property name="path" value="default.routeLen"/>
  </bean>
  <bean class="org.akraievoy.cnet.net.ref.RefVertexData" id="ref_default_vdata_location_x">
    <property name="path" value="default.location.x"/>
  </bean>
  <bean class="org.akraievoy.cnet.net.ref.RefVertexData" id="ref_default_vdata_location_y">
    <property name="path" value="default.location.y"/>
  </bean>
  <bean class="org.akraievoy.cnet.net.ref.RefVertexData" id="ref_default_vdata_density">
    <property name="path" value="default.density"/>
  </bean>
  <bean class="org.akraievoy.base.runner.api.RefDouble" id="ref_eigenGap">
    <property name="path" value="eigenGap.physical"/>
  </bean>
  <bean class="org.akraievoy.base.runner.api.RefObject" id="ref_degrees">
    <property name="path" value="stat.degrees"/>
  </bean>
  <bean class="org.akraievoy.base.runner.api.RefObject" id="ref_lengths">
    <property name="path" value="stat.lengths"/>
  </bean>

  <bean class="org.akraievoy.cnet.gen.domain.MetricEDataGenStructural" id="netFactory">
    <property name="target" ref="ref_default_edata_structure"/>
    <property name="type" value="path"/>
    <property name="netNodeNum" value="3"/>
  </bean>

  <bean class="org.akraievoy.cnet.gen.vo.EntropySourceRandom" id="entropySourceLocation"/>

  <bean class="org.akraievoy.cnet.metrics.domain.MetricVDataLocation" id="locationMetric">
    <constructor-arg ref="locationGenerator"/>
    <constructor-arg ref="entropySourceLocation"/>

    <property name="targetX" ref="ref_default_vdata_location_x"/>
    <property name="targetY" ref="ref_default_vdata_location_y"/>

    <!-- DYNAMIC -->
    <property name="nodes" value="120"/>
  </bean>

  <bean class="org.akraievoy.cnet.metrics.domain.MetricEDataDistance" id="distMetric">
    <constructor-arg>
      <bean class="org.akraievoy.cnet.gen.vo.MetricEuclidean">
      </bean>
    </constructor-arg>

    <property name="sourceX" ref="ref_default_vdata_location_x"/>
    <property name="sourceY" ref="ref_default_vdata_location_y"/>

    <property name="target" ref="ref_default_edata_distance"/>
  </bean>

  <bean class="org.akraievoy.cnet.gen.vo.EntropySourceRandom" id="entropySource"/>

  <bean id="connPreference" class="org.akraievoy.cnet.gen.vo.ConnPreferenceYookJeongBarabasi">
    <!-- DYNAMIC -->
    <property name="alpha" value="1"/>
    <!-- DYNAMIC -->
    <property name="beta" value="1"/>
  </bean>

  <bean id="structure" class="org.akraievoy.cnet.metrics.domain.MetricEDataStructure">
    <constructor-arg ref="connPreference"/>

    <constructor-arg ref="entropySource"/>

    <property name="distSource" ref="ref_default_edata_distance"/>
    <property name="structureSource" ref="ref_default_edata_structure"/>

    <property name="target" ref="ref_default_edata_structure"/>
  </bean>

  <bean class="org.akraievoy.cnet.metrics.domain.MetricVDataDensity" id="densityMetric">
    <constructor-arg ref="locationGenerator"/>

    <property name="sourceX" ref="ref_default_vdata_location_x"/>
    <property name="sourceY" ref="ref_default_vdata_location_y"/>

    <property name="target" ref="ref_default_vdata_density"/>
  </bean>

  <bean class="org.akraievoy.cnet.metrics.domain.MetricEDataRouteLen" id="routeLenMetric">
    <constructor-arg>
      <bean class="org.akraievoy.cnet.metrics.domain.MetricRoutesFloydWarshall">
        <property name="source" ref="ref_default_edata_structure"/>
        <property name="distSource" ref="ref_default_edata_distance"/>
      </bean>
    </constructor-arg>

    <property name="target" ref="ref_default_edata_routeLen"/>
  </bean>

  <bean class="org.akraievoy.cnet.metrics.domain.MetricScalarEigenGap" id="eigenGapMetric">
    <property name="source" ref="ref_default_edata_structure"/>
    <property name="target" ref="ref_eigenGap"/>
  </bean>

  <bean class="org.akraievoy.cnet.metrics.domain.MetricStatDegrees" id="degreeStat">
    <property name="source" ref="ref_default_edata_structure"/>
    <property name="target" ref="ref_degrees"/>
  </bean>

  <bean class="org.akraievoy.cnet.metrics.domain.MetricStatLengths" id="lengthStat">
    <property name="source" ref="ref_default_edata_structure"/>
    <property name="distSource" ref="ref_default_edata_distance"/>
    <property name="target" ref="ref_lengths"/>
  </bean>

  <bean class="org.akraievoy.base.runner.domain.RunnableComposite" id="main">
    <property name="group">
      <list>
        <ref bean="locationGenerator"/>
        <ref bean="netFactory"/>
        <ref bean="locationMetric"/>
        <ref bean="distMetric"/>
        <ref bean="structure"/>
        <ref bean="densityMetric"/>
        <ref bean="routeLenMetric"/>
        <ref bean="eigenGapMetric"/>
        <ref bean="degreeStat"/>
        <ref bean="lengthStat"/>
      </list>
    </property>
  </bean>
</beans>
