<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:hn="https://github.com/akraievoy/holonet/runner"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
           https://github.com/akraievoy/holonet/runner
           https://github.com/akraievoy/holonet/raw/master/ext/holonet.runner-1.3.1.xsd"
       default-init-method="start"
       default-destroy-method="stop">
  <hn:Experiment id="dlaGen-1-images" depends="" description="DLA density distribution [stage1] Images">
    <hn:Config name="default" description="Multiple dimensions">
      <hn:Param name="entropySource.seed" value="13311331"/>
      <hn:Param name="locationGenerator.gridSize" value="1024"/>
      <hn:Param name="locationGenerator.dimensionRatio" value="1;1.25;1.5;1.75;2"/>
    </hn:Config>
    <hn:Config name="seeds" description="Multiple seeds">
      <hn:Param name="entropySource.seed" value="13311331;31133113;53355335;35533553;51155115"/>
      <hn:Param name="locationGenerator.dimensionRatio" value="1.5"/>
    </hn:Config>
  </hn:Experiment>

  <bean id="location_time_millis" class="org.akraievoy.base.runner.api.RefLong">
    <property name="path" value="location_time_millis"/>
  </bean>
  <bean id="location_time_text" class="org.akraievoy.base.runner.api.RefString">
    <property name="path" value="location_time_text"/>
  </bean>

  <bean id="images_time_millis" class="org.akraievoy.base.runner.api.RefLong">
    <property name="path" value="images_time_millis"/>
  </bean>
  <bean id="images_time_text" class="org.akraievoy.base.runner.api.RefString">
    <property name="path" value="images_time_text"/>
  </bean>

  <bean class="org.akraievoy.cnet.gen.vo.EntropySourceRandom" id="entropySource">
  </bean>

  <bean class="org.akraievoy.cnet.gen.domain.LocationGeneratorRecursive" id="locationGenerator">
    <constructor-arg ref="entropySource"/>
  </bean>

  <bean class="org.akraievoy.holonet.runner.dlaGenTest.LocationGeneratorImages" id="images">
    <constructor-arg ref="locationGenerator"/>
  </bean>

  <bean class="org.akraievoy.base.runner.domain.RunnableComposite" id="main">
    <property name="group">
      <list>
        <bean class="org.akraievoy.base.runner.api.TimingHarness">
          <constructor-arg ref="locationGenerator"/>

          <property name="durationRef" ref="location_time_millis"/>
          <property name="durationTextRef" ref="location_time_text"/>
        </bean>
        <bean class="org.akraievoy.base.runner.api.TimingHarness">
          <constructor-arg ref="images"/>

          <property name="durationRef" ref="images_time_millis"/>
          <property name="durationTextRef" ref="images_time_text"/>
        </bean>
      </list>
    </property>
  </bean>
</beans>